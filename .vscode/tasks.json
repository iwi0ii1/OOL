{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C with gcc-15",
      "type": "shell",
      "command": "gcc-15",
      "args": [
        "-std=gnu23",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build C++ with g++-15",
      "type": "shell",
      "command": "g++-15",
      "args": [
        "-std=gnu++23",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}
